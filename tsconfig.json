{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2016",
        "jsx": "preserve",
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "rootDir": "./src/",
        "outDir": "./dist/"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}